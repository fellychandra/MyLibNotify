<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/krim">
    <ImageView
        android:id="@+id/dudukbelajar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/belajarsendiri"/>

    <TextView
        android:id="@+id/gantipass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganti Password"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:textColor="@color/biru"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dudukbelajar" />

    <TextView
        android:id="@+id/txtnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:text="NIP/NIM"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/biru"
        android:layout_below="@+id/gantipass"/>

    <EditText
        android:id="@+id/edtnim"
        android:layout_width="325dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtnim"
        android:layout_alignLeft="@id/txtnim"
        android:backgroundTint="@color/biru"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColorHint="@color/biru"
        android:textAlignment="textStart"
        android:textColor="@color/biru"
        />

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="10dp"
        android:text="Nama"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/biru"
        android:layout_below="@+id/edtnim"/>

    <EditText
        android:id="@+id/edtnama"
        android:layout_width="325dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtnama"
        android:layout_alignLeft="@id/txtnama"
        android:backgroundTint="@color/biru"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColorHint="@color/biru"
        android:textAlignment="textStart"
        android:textColor="@color/biru" />

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/biru"
        android:layout_below="@+id/edtnama"/>

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="325dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtemail"
        android:layout_alignLeft="@id/txtemail"
        android:backgroundTint="@color/biru"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColorHint="@color/biru"
        android:textAlignment="textStart"
        android:textColor="@color/biru" />

    <TextView
        android:id="@+id/txtpasslama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="10dp"
        android:text="Password Lama"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/biru"
        android:layout_below="@+id/edtemail"/>

    <EditText
        android:id="@+id/edtpasslama"
        android:layout_width="325dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtpasslama"
        android:layout_alignLeft="@id/txtpasslama"
        android:backgroundTint="@color/biru"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColorHint="@color/biru"
        android:textAlignment="textStart"
        android:textColor="@color/biru" />

    <TextView
        android:id="@+id/txtpassbaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="10dp"
        android:text="Password Baru"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textColor="@color/biru"
        android:layout_below="@+id/edtpasslama"/>

    <EditText
        android:id="@+id/edtpassbaru"
        android:layout_width="325dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtpassbaru"
        android:layout_alignLeft="@id/txtpassbaru"
        android:backgroundTint="@color/biru"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColorHint="@color/biru"
        android:textAlignment="textStart"
        android:textColor="@color/biru" />


    <Button
        android:id="@+id/btnsimpan"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_below="@+id/edtpassbaru"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/krim"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/biru"
        android:text="Simpan" />
</RelativeLayout>