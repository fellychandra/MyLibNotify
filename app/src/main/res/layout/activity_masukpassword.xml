<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/krim">

    <TextView
        android:id="@+id/namabuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Buku yang discan"
        android:textColor="@color/biru"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editmasukpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/membutuhkanpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namabuku"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="Membutuhkan Password!!!"
        android:textColor="@color/biru"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editmasukpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namabuku"
        app:layout_constraintVertical_bias="0.803" />

    <EditText
        android:id="@+id/editmasukpass"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_below="@id/membutuhkanpass"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_light"
        android:hint="Masukkan Password Anda"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/biru"
        android:textColorHint="@color/biru"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273" />

    <Button
        android:id="@+id/btnsimpan"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_below="@+id/editmasukpass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/biru"
        android:fontFamily="@font/poppins_medium"
        android:text="Simpan"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editmasukpass"
        app:layout_constraintVertical_bias="0.034" />
</androidx.constraintlayout.widget.ConstraintLayout>