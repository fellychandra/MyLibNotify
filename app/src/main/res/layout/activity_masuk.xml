<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru">


    <TextView
        android:id="@+id/hai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hai!"
        android:textColor="@color/krim"
        android:textSize="48dp"
        android:textStyle="bold"
        android:layout_marginLeft="45dp"
        android:paddingTop="170dp"/>

    <TextView
        android:id="@+id/nip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang Kembali!"
        android:textAlignment="center"
        android:textColor="@color/krim"
        android:textSize="20dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="240dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"/>

    <TextView
        android:id="@+id/nimnip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="320dp"
        android:text="NIM/NIP"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textColor="@color/krim"
        android:textSize="16sp"
        android:textStyle="normal"/>


    <EditText
        android:id="@+id/TextNIPNIM"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nimnip"
        android:layout_alignLeft="@id/nimnip"
        android:backgroundTint="@color/oren"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:hint="Masukkan No Induk Anda"
        android:textColorHint="@color/krim"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColor="@color/krim" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="410dp"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="@color/krim"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="normal"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/TextPassword"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignLeft="@id/password"
        android:backgroundTint="@color/oren"
        android:inputType="textPassword"
        android:hint="Masukkan Password Anda"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textColorHint="@color/krim"
        android:textAlignment="textStart"
        android:textColor="@color/krim" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="521dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/oren"
        android:text="Masuk"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textSize="15sp" />
</RelativeLayout>